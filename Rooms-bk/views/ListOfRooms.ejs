            <h2 class="mt-3"><b>List of rooms available on <%= Date1%></b></h2>
        </form>
            <div class="btn-group-vertical m-3">
                <%if(availableRooms.length!=0){%>
                    <% for(var i=0; i< availableRooms.length; i++) { %>
                        <button type="text" style="background-color:#4d9968" class="btn btn-info "><a href="room/<%=availableRooms[i].id%> "><%= availableRooms[i].roomNo %></a></button>
